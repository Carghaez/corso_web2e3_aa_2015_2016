{
	"manifest_version": 2,

	"name": "GitHub Notifyme",
	"version": "0.1",
	"description": "Notifiche Aggiornamenti commits repository github",

	"icons": {
			"16": "img/icons/icon_16.png",
			"48": "img/icons/icon_48.png",
			"128": "img/icons/icon_128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "img/icons/icon_19.png"
		},
		"default_title": "GitHub Notifyme",
		"default_popup": "popup/index.html"
	},

	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage",
		"http://*/*", "https://*/*",
		"notifications"
	],

	"background": {
		"scripts": ["script.js"],
		"persistent": false
	}
}